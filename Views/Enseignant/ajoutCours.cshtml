<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ajoutCours</title>
</head>
<body>
    <div>

        @using (Html.BeginForm("inscription", "Inscription", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.titre)
                @Html.TextBoxFor(m => m.titre, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.titre, "you must enter a Lastname", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.description)
                @Html.TextBoxFor(m => m.description, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.description, "You must enter you name", new { @class = "text-danger" })
            </div>

            <div class="form-group">
               
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.img, htmlAttributes: new { @class = "control-label" })
                @Html.TextBoxFor(m => m.img, new { type = "file", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.img, "Select an img", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        }


    </div>
</body>
</html>
